@model ICollection<HelpOn.Dominio.Models.Funcionario>

    @{
        ViewBag.Title = "ListarFuncionarios";
    }

    @HelperMensagens.Message(TempData["mensagem"], "alert bg-success", "glyph stroked checkmark", "#stroked-checkmark")

    <br>

    <div class="panel panel-default">
        <div class="panel-heading">
            <i class="glyphicon glyphicon-user"></i>Funcionários cadastrados
        </div>
        <div class="panel-body">

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Nivel</th>
                        <th>Email</th>
                        <th>Opções</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var funcionario in Model)
                    {
                        <tr>
                            <td>@funcionario.Nome</td>
                            <td>@funcionario.Nivel.Nome</td>
                            <td>@funcionario.Email</td>
                            <td>

                                <button class="btn btn-default details" data-id="@funcionario.IDFuncionario"><i class="glyphicon glyphicon-file"></i></button>
                                <button class="btn btn-info edit" data-id="@funcionario.IDFuncionario"><i class="glyphicon glyphicon-edit"></i></button>
                                <button class="btn btn-danger delete" onclick="IDFuncionario.value = @funcionario.IDFuncionario" data-toggle="modal" data-target="#deletar">
                                    <i class="glyphicon glyphicon-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

            <div class="modal fade" id="modal">

            </div>
        </div>
    </div>
