@model ICollection<HelpOn.Dominio.Models.Unidade>

@{
    ViewBag.Title = "Index";
}

@HelperMensagens.Message(TempData["mensagem"], "alert bg-success", "glyph stroked checkmark", "#stroked-checkmark")




<br>

<div class="panel panel-default">
    <div class="panel-heading">
        <i class="glyphicon glyphicon-map-marker"></i>Unidades cadastradas
    </div>
    <div class="panel-body">

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Unidade</th>
                    <th>Logradouro</th>
                    <th>Número</th>
                    <th>CEP</th>
                    <th>Bairro</th>
                    <th>Cidade</th>
                    <th>Opções</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var unidade in Model)
                {
                    <tr>
                        <td>@unidade.Nome</td>
                        <td>@unidade.Logradouro</td>
                        <td>@unidade.Numero</td>
                        <td>@unidade.CEP</td>
                        <td>@unidade.Bairro</td>
                        <td>@unidade.Cidade</td>
                        <td>

                            <button class="btn btn-default details" data-id="@unidade.IDUnidade"><i class="glyphicon glyphicon-file"></i></button>
                            <button class="btn btn-danger delete" data-id="@unidade.IDUnidade"><i class="glyphicon glyphicon-trash"></i></button>
                            <button class="btn btn-primary edit" data-id="@unidade.IDUnidade"><i class="glyphicon glyphicon-edit"></i></button>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        <div class="modal fade" id="modal">

        </div>
    </div>
</div>



@section scripts{
    <script>
        $(function () {
            $(".details").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("Details?id=" + id, function () {
                    $("#modal").modal();
                })
            });
        })
    </script>
}


