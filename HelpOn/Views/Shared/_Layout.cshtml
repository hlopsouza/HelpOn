<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>HelpOn</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet">
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

    <!--Icons-->
    <script src="~/Scripts/helpon.glyphs.js"></script>
  


</head>

<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><span>Help</span>On</a>
                <ul class="user-menu">
                    <li class="dropdown pull-right">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><svg class="glyph stroked male-user"><use xlink:href="#stroked-male-user"></use></svg> User <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#"><svg class="glyph stroked male-user"><use xlink:href="#stroked-male-user"></use></svg> Perfil</a></li>
                            <li><a href="#"><svg class="glyph stroked gear"><use xlink:href="#stroked-gear"></use></svg> Configurações</a></li>
                            <li>@Html.ActionLink("Sair", "Sair", "Login")</li>
                        </ul>
                    </li>
                </ul>
            </div>

        </div>
    </nav>

    <div id="sidebar-collapse" class="col-sm-3 col-lg-2 sidebar">
        <form role="search">
            <div class="form-group">
               
            </div>
        </form>
        <ul class="nav menu">
            <li>@Html.ActionLink("Cadastrar funcionário", "Cadastrar", "Funcionario")</li>
            <li>@Html.ActionLink("Funcionários cadastrados", "ListarFuncionarios", "Funcionario")</li>
            <li>@Html.ActionLink("Cadastrar Unidades", "Cadastrar", "Unidade")</li>
            <li>@Html.ActionLink("Unidades cadastradas", "ListarUnidades", "Unidade")</li>
            <li>@Html.ActionLink("Andares", "Andares", "Unidade")</li>
            <li>@Html.ActionLink("Laboratórios", "Labs", "Unidade")</li>
           
        </ul>

    </div>

    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">

        @RenderBody()

    </div>	


    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery.maskedinput.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

    @RenderSection("scripts", false)
</body>

</html>
